<div class="form-group">
          <%= f.label :created_at, "Entertainment Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='entertainmentgteqcreated_atPicker'>
                  <%= f.text_field :entertainment_created_at_gteq, :class => "form-control", :placeholder => "Entertainment Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='entertainmentlteqcreated_atPicker'>
                  <%= f.text_field :entertainment_created_at_lteq, :class => "form-control", :placeholder => "Entertainment Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#entertainmentgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#entertainmentlteqcreated_atPicker').datetimepicker({

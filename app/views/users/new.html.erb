<!-- Validation failure messages -->
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add User</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_user" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for friends -->
      <div class="form-group">
        <label for="friends" class="control-label">
          Friends
        </label>

        <input type="text" id="friends" name="friends" placeholder="Friends" class="form-control" value="<%= @user.friends %>">
      </div>

      <!-- Label and input for recommends -->
      <div class="form-group">
        <label for="recommends" class="control-label">
          Recommends
        </label>

        <input type="text" id="recommends" name="recommends" placeholder="Recommends" class="form-control" value="<%= @user.recommends %>">
      </div>

      <button class="btn btn-success">
        Create User
      </button>
      or
      <a href="/users">Cancel</a>
    </form>
  </div>
</div>
